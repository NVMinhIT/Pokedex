<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize">@dimen/text_size_smallest</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button_active">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_button_active</item>
        <item name="android:textColor">@color/white_view</item>
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="progressbar" parent="Theme.AppCompat.Light">
        <item name="android:startColor">@color/dark_sky_blue</item>
        <item name="android:centerColor">@color/items_primary</item>
        <item name="android:endColor">@color/soft_blue</item>

    </style>

    <style name="button_noactive">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_button_noactive</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="button_search">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/soft_blue</item>
        <item name="android:textColor">@color/white_view</item>
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="MyPokemonTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pokemon_primary</item>
        <item name="colorPrimaryDark">@color/pokemon_primary_dark</item>

    </style>

    <style name="MyMovieTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pokemon_primary</item>
        <item name="colorPrimaryDark">@color/pokemon_primary_dark</item>

    </style>

    <style name="MyItemsTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/items_primary</item>
        <item name="colorPrimaryDark">@color/items_primary</item>

    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
