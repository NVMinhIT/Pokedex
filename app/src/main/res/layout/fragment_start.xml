                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_min"
                        android:text="@string/monster"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_size_normal"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_xmin"
                        android:text="@string/water_i"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_size_normal"

                        />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="93dp"
                    android:background="@color/text_hint"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/hatchtime"
                        android:textColor="#559edf"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_min"
                        android:text="@string/_5101_steps"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_size_normal"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_xmin"
                        android:text="@string/_20_cycles"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_size_normal"

                        />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="93dp"
                    android:background="@color/text_hint"

                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/gender"
                        android:textColor="#559edf"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPercent1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="@dimen/margin_top_xmin"
                        android:layout_marginLeft="@dimen/margin_top_xmin"
                        android:layout_marginTop="@dimen/margin_top_min"
                        android:text="@string/_12_5"
                        android:textColor="#ce71e1"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvGender" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="@dimen/margin_top_xmin"
                        android:layout_marginLeft="@dimen/margin_top_xmin"
                        android:layout_marginTop="@dimen/margin_top_xmin"
                        android:text="@string/_85_5"
                        android:textColor="@color/pokemon_primary"
                        android:textSize="@dimen/text_size_normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPercent1" />

                    <ImageView
                        android:layout_width="@dimen/size_icon_weakness_width"
                        android:layout_height="@dimen/size_icon_weakness_height"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="@dimen/margin_top_min"
                        android:src="@drawable/ic_gender"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvPercent1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.8"
                        tools:ignore="ContentDescription" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCapture"
