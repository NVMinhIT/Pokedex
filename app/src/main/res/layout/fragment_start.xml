                    <ProgressBar
                        android:id="@+id/progress_bar6"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="240dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:progressDrawable="@drawable/custom_progress_bar" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/weaknesss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_large"
                android:text="@string/weaknesses"
                android:textColor="@color/pokemon_primary_dark"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contentLinearLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWeakNesses"
                android:layout_width="0dp"
                android:layout_height="295dp"
                android:layout_marginStart="@dimen/margin_xnormal"
                android:layout_marginLeft="@dimen/margin_xnormal"
                android:layout_marginTop="@dimen/margin_top_min"
                android:layout_marginEnd="@dimen/margin_xnormal"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weaknesss" />

            <TextView
                android:id="@+id/tvAbilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_large"
                android:text="@string/abilities"
                android:textColor="@color/pokemon_primary_dark"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvWeakNesses" />

            <TextView
                android:id="@+id/tvTorrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_normal"
                android:layout_marginLeft="@dimen/margin_left_normal"
                android:layout_marginTop="@dimen/margin_top_large"
                android:text="@string/torrent"
                android:textColor="@color/pokemon_primary"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAbilities" />

            <TextView
                android:id="@+id/tvContentTorrent"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/margin_left_normal"
                android:layout_marginLeft="@dimen/margin_left_normal"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/powers_up_water_type_moves_when_the_pok_mon_is_in_trouble"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTorrent" />

            <TextView
                android:id="@+id/tvBreeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_large"
                android:text="@string/breeding"
                android:textColor="@color/pokemon_primary_dark"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContentTorrent" />

            <LinearLayout
                android:id="@+id/contentBreeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xnormal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_xnormal"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBreeding"
                tools:ignore="UselessLeaf">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
