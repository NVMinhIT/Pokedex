<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contentRelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessLeaf">

        <ImageView
            android:id="@+id/imgViewPokemon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_left_big"
            android:layout_marginLeft="@dimen/margin_left_big"
            android:background="@drawable/pokedex"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvNamePokemon"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewPokemon"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_left_big"
            android:layout_marginLeft="@dimen/margin_left_big"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imgTo1"
            android:layout_centerInParent="true"
            android:text="@string/lv_16"
            android:textColor="@color/dark_sky_blue"
            android:textSize="@dimen/text_size_normal" />


        <ImageView
            android:id="@+id/imgTo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_to"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/imgViewPokemonEvolution"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/margin_left_big"
            android:layout_marginRight="@dimen/margin_left_big"
            android:background="@drawable/pk8"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvEvolutionPokemon"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewPokemon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/text"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/margin_left_big"
            android:layout_marginRight="@dimen/margin_left_big"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/text_hint" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>